<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    {# for font awsome icons #}
    <script src="https://kit.fontawesome.com/784e0355cc.js" crossorigin="anonymous"></script>
  </head>
  <body>
   {# header section #}
    <header>
    <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      <nav class="navbar navbar-light bg-light">
        <div class="container">
         
             <img src="../../img/Andrita_logo.jpg" alt="Logo" class="d-inline-block align-text-top w-15">
               
              {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
      {%- endfor %}
        </div>
      </nav>
    </header>

    {# main section #}
    <main class="container-fluid mh-100 " id="main-section"{% if templateClass %} class="{{ templateClass }}"{% endif %}>

      {{ content | safe }}
     
    </main>

    {# footer #}
    <footer class="navbar fixed-bottom">
                <i class="fas fa-envelope-open-text"> - <a href="mailto:alimasWebDeveloper@gmail.com">alimasWebDeveloper@gmail.com</a></i>
                <i class="fas fa-phone-volume"> - +447434628622</i>
                <i class="fab fa-github"> - <a href="https://github.com/AndriusAlimas">github.com/AndriusAlimas</a></i>
         <p>Current page: {{ page.url | url }} </p>
    </footer>
  </body>
</html>
